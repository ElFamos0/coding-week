<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.amplet.views.Index">
   <top>
      <fx:include fx:id="menu" source="menu.fxml" />
   </top>
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="30.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#switchToApprParam" prefHeight="35.0" prefWidth="200.0" style="-fx-background-radius: 20;" styleClass="btn" stylesheets="@boutonIndex.css" text="Apprendre" textFill="WHITE" />
            <Button mnemonicParsing="false" onAction="#switchToListePile" prefHeight="35.0" prefWidth="200.0" style="-fx-background-radius: 20;" styleClass="btn" stylesheets="@boutonIndex.css" text="Gérer les piles" textFill="WHITE" />
            <Button mnemonicParsing="false" onAction="#switchToListeCarte" prefHeight="35.0" prefWidth="200.0" style="-fx-background-radius: 20;" styleClass="btn" stylesheets="@boutonIndex.css" text="Gérer les cartes" textFill="WHITE" />
            <Button mnemonicParsing="false" onAction="#switchToStatistiques" prefHeight="35.0" prefWidth="200.0" style="-fx-background-radius: 20;" styleClass="btn" stylesheets="@boutonIndex.css" text="Statistiques" textFill="WHITE" />
         </children>
      </VBox>
   </center>
</BorderPane>
