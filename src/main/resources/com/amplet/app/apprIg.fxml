<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.amplet.views.ApprIg">
   <top>
      <fx:include fx:id="menu" source="menu.fxml" />
   </top>
   <center>
      <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <top>
            <BorderPane prefHeight="13.0" prefWidth="640.0" BorderPane.alignment="CENTER">
               <left>
                  <Label fx:id="timertext" text="TIMER" BorderPane.alignment="TOP_LEFT">
                     <BorderPane.margin>
                        <Insets left="20.0" top="20.0" />
                     </BorderPane.margin>
                  </Label>
               </left>
               <right>
                  <Label fx:id="nbdecarte" text="Nb de carte " BorderPane.alignment="TOP_RIGHT">
                     <BorderPane.margin>
                        <Insets right="20.0" top="20.0" />
                     </BorderPane.margin>
                  </Label>
               </right>
            </BorderPane>
         </top>
         <center>
            <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <top>
                  <ProgressBar prefHeight="20.0" prefWidth="340.0" progress="0.0" BorderPane.alignment="CENTER" />
               </top>
               <center>
                  <VBox fx:id="carte" alignment="TOP_CENTER" fillWidth="false" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="255.0" prefWidth="512.0" style="-fx-background-color: #efefef; -fx-background-radius: 10; -fx-border-width: 2; -fx-border-radius: 10; -fx-border-color: #a3a3a3;">
                     <VBox.margin>
                        <Insets bottom="15.0" top="15.0" />
                     </VBox.margin>
                     <opaqueInsets>
                        <Insets left="10.0" right="10.0" />
                     </opaqueInsets>
                     <children>
                        <Label fx:id="titrecarte" alignment="CENTER" contentDisplay="CENTER" text="Titre">
                           <VBox.margin>
                              <Insets bottom="40.0" top="30.0" />
                           </VBox.margin>
                        </Label>
                        <Label fx:id="question" alignment="CENTER" contentDisplay="CENTER" text="Question">
                           <VBox.margin>
                              <Insets bottom="10.0" top="10.0" />
                           </VBox.margin>
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
               </center>
               <left>
                  <Button fx:id="boutonrefuser" mnemonicParsing="false" onAction="#refuser" text="✘" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets left="10.0" />
                     </BorderPane.margin>
                  </Button>
               </left>
               <right>
                  <Button fx:id="boutonvalider" mnemonicParsing="false" onAction="#valider" text="✔" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets right="10.0" />
                     </BorderPane.margin>
                  </Button>
               </right>
            </BorderPane>
         </center>
      </BorderPane>
   </center>
   <bottom>
      <HBox alignment="CENTER" prefHeight="49.0" prefWidth="640.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="reponseuser" promptText="Entre ta réponse" />
            <Button fx:id="textvalider" mnemonicParsing="false" text="Valider" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
