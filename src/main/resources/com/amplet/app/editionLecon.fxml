<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/19"
   xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.amplet.views.EditionLecon">
   <top>
      <fx:include fx:id="menu" source="menu.fxml" />
   </top>
   <center>
      <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <center>
            <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <center>
                  <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                     <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="200.0">
                           <children>
                              <Label text="Nom :">
                                 <font>
                                    <Font size="20.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="nomLecon">
                                 <HBox.margin>
                                    <Insets left="20.0" top="5.0" />
                                 </HBox.margin>
                              </TextField>
                           </children>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="60.0">
                           <children>
                              <VBox>
                                 <children>
                                    <HBox alignment="CENTER_LEFT" prefHeight="33.0">
                                       <children>
                                          <Label text="Tags :">
                                             <font>
                                                <Font size="20.0" />
                                             </font>
                                          </Label>
                                          <TextField fx:id="tagField">
                                             <HBox.margin>
                                                <Insets left="20.0" top="5.0" />
                                             </HBox.margin>
                                          </TextField>
                                          <Label fx:id="labelTagsCount" text="0/10">
                                             <font>
                                                <Font size="14.0" />
                                             </font>
                                             <HBox.margin>
                                                <Insets left="20.0" />
                                             </HBox.margin>
                                          </Label>
                                       </children>
                                    </HBox>
                                    <Label text="(Mettre un ; pour ajouter le tag)" />
                                    <ScrollPane fitToHeight="true" prefHeight="200.0"
                                       style="-fx-background-color: transparent;" vbarPolicy="NEVER">
                                       <VBox.margin>
                                          <Insets top="5.0" />
                                       </VBox.margin>
                                       <content>
                                          <HBox fx:id="tags" prefHeight="100.0" spacing="7.5">
                                             <children>
                                                <!-- Tags -->
                                                <!-- <Button mnemonicParsing="false"
                                                styleClass="tag"
                                                            stylesheets="@boutonTag.css"
                                                text="Button">
                                                               <HBox.margin>
                                                <Insets />
                                                               </HBox.margin>
                                                </Button> -->
                                             </children>
                                          </HBox>
                                       </content>
                                    </ScrollPane>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                     <BorderPane.margin>
                        <Insets left="20.0" right="20.0" top="10.0" />
                     </BorderPane.margin>
                  </VBox>
               </center>
               <top>
                  <Label text="Paramètre de la leçon" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets top="10.0" />
                     </BorderPane.margin>
                     <font>
                        <Font name="System Bold" size="26.0" />
                     </font>
                  </Label>
               </top>
            </BorderPane>
         </center>
         <top>
            <Button mnemonicParsing="false" onAction="#retourListe" styleClass="return"
               stylesheets="@boutonRetour.css" text="&lt;" BorderPane.alignment="TOP_LEFT">
               <font>
                  <Font name="Fira Mono Bold" size="12.0" />
               </font>
            </Button>
         </top>
      </BorderPane>
   </center>
</BorderPane>